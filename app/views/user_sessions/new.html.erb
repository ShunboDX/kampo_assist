<h1>ログイン</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: user_session_path, method: :post do |f| %>
  <div>
    <%= label_tag :email, "メールアドレス" %><br>
    <%= email_field_tag :email, params[:email] %>
  </div>

  <div>
    <%= label_tag :password, "パスワード" %><br>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "ログイン" %>
  </div>
<% end %>
